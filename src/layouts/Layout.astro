---
// Layout.astro
import Footer from '../components/Footer.astro'
interface Props {
  title?: string;
}

// import '../styles/global.css'

const { title = "Default Title" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Site</title>
    <style is:global>
      @font-face {
        font-family: 'Innovator Grotesk';
        src: url('/fonts/innovator-grotesk/InnovatorGroteskVF-VF.woff2') format('woff2');
        font-weight: 100 900;
        font-display: swap;
      }

      @font-face {
        font-family: 'Innovator Grotesk';
        src: url('/fonts/innovator-grotesk/InnovatorGroteskVF-Thin.woff2') format('woff2');
        font-weight: 100;
        font-display: swap;
      }

      body {
        font-family: 'Innovator Grotesk', sans-serif;
      }
    </style>
  </head>
  <body class="flex min-h-full flex-col">
    <main class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
